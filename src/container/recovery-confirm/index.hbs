<div class="page page--background">
    <header>
        {{>back-button}}
    </header>
    <form action="" class="page__section">
        <h1 class="page__title">Відновлення паролю</h1>

        <div class="form">

            <div class="form__item">
                {{> field action="recoveryConfirmForm.change" name='code' type='number' placeholder='Ваш код'
                label='Код'}}
                <span name="code" class="form__error">Помилка</span>
            </div>


            <div class="form__item">
                {{> field-password action="recoveryConfirmForm.change" name='password' placeholder='Новий пароль'
                label='Пароль'}}
                <span name="password" class="form__error">Помилка</span>
            </div>

            <div class="form__item">
                {{> field-password action="recoveryConfirmForm.change" name='passwordAgain' placeholder='Новий пароль'
                label='Пароль ще раз'}}
                <span name="passwordAgain" class="form__error">Помилка</span>
            </div>

        </div>

        <button onclick="recoveryConfirmForm.submit()" class="button button--disabled" type="button">Змінити
            пароль</button>
        <span class="alert alert--disabled">Увага, помилка</span>

    </form>
</div>