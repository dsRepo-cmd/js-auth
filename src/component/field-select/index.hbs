<div class="field field--select">

	<label class="field__label">{{label}}</label>

	<div class="field__container">

		<button onclick="fieldSelect.toogle(this)" class="field__select validation" name="{{name}}" type="button">
			<span class="field__value field__value--placeholder">{{placeholder}}</span>
			<span class="field__icon"></span>
		</button>

		<ul class="field__option-list">
			{{#each list}}
			<li onclick="
			fieldSelect.change(this)
			{{../action}}('{{../name}}', {{value}})
			" class="field__option">
				{{text}}
			</li>
			{{/each}}
		</ul>

	</div>
</div>